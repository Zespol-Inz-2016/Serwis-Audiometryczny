@using (Html.BeginForm("Import", "Backup", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="content">
            <label for="backup">Plik:</label>
            <span class="btn btn-default btn-file">
                <label>
                    <input type="file" name="backup" class="btn-file" />
                </label>
            </span>
            <input type="submit" value="Wyślij" class="btn btn-primary" />
            <div>@ViewBag.Message</div>
        </div>
    </div>

}
