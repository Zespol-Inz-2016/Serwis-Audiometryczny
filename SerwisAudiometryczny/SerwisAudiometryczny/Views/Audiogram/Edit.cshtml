            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nuisance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Nuisance, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nuisance, "", new { @class = "text-danger" })
